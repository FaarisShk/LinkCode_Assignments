import java.util.*;
public class main{
	static Scanner sc = new Scanner(System.in);
	
	public static void ArrayListOperations(ArrayList<Integer> a1, int choice) {
		
		
		switch(choice) {
		case 1:
			System.out.print("Adding more elements");
			System.out.println("How many more elements do you want to add: ");
			int n = sc.nextInt();
			for(int i=0;i<n;i++) {
				System.out.println("Enter elements at index " + (a1.size()+1) + ": ");
				
			}
		}
	}
	
	public static void ArrayListOperations(String []args) {
	
		System.out.print("Enter the size of your array: ");
		int n = sc.nextInt();
		
		ArrayList<Integer> a1 = new ArrayList<>();
		
		for(int i=0;i<n;i++) {
			System.out.print("Enter number at index " + (i+1) + ": ");
			int n1 = sc.nextInt();
			a1.add(n1);
		}
	}
}